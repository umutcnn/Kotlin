<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.View.IlceYukleActivity">



    <EditText
        android:id="@+id/IlceAdiText"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ilce Adini Yaziniz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/IlceaciklamaText"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Ilce Açıklamasını Yaziniz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/yukleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Yükle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2022" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="356dp"
        android:layout_height="256dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/select_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2020"
        android:layout_width="101dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="2020 Nüfus"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/IlceaciklamaText"
        app:layout_constraintTop_toBottomOf="@+id/IlceaciklamaText" />

    <EditText
        android:id="@+id/editTextNumber2022"
        android:layout_width="101dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="2022 Nüfus"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber2023"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber2020"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber2020" />

    <EditText
        android:id="@+id/editTextNumber2023"
        android:layout_width="101dp"
        android:layout_height="53dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="2023 Nüfus"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/IlceaciklamaText"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber2022" />

</androidx.constraintlayout.widget.ConstraintLayout>