<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/border2"
    android:layout_marginTop="10dp" >


    <!-- Resim -->

    <!-- Metin ve Buton Alanı -->
    <ImageView
        android:id="@+id/tarihi_yerler_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- Başlık -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başlık"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Açıklama -->
        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Açıklama DEenememkedslkfoksnosfo osgjoıjdsnıogsjdnonsgdoısgndon osgdjıgdsnogdsı oısgjoıdgn "
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Buton -->
        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="#673AB7"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="Devamı için Tıklayınız"
            android:textColor="#CFCDCD"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>
